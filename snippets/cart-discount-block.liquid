<div x-data x-show="$store.ajCart.cart.item_count > 0" class="fluctit-online-consult">
  <div class="cart-discount-block">
    {% comment %} <div class="discount-form-container">
      <div class="discount-input-group">
        <input 
          type="text" 
          name="discount_code" 
          placeholder="{{ 'cart.mini_cart.discount.placeholder' | t }}"
          class="discount-input"
          id="discount-input"
        >
 <button type="button" class="discount-apply-btn" id="discount-apply">
  <span class="btn-text">{{ 'cart.mini_cart.discount.apply' | t }}</span>
  <span class="btn-loading" style="display: none;">{{ 'cart.mini_cart.discount.loading' | t }}</span>
</button>
      </div>
      <div class="discount-message" id="discount-message" style="display: none;"></div>
      <div class="applied-discounts" id="applied-discounts" style="display: none;"></div>
      {%- if cart.cart_level_discount_applications.size > 0 -%}
        <div class="active-discounts">
          {%- for discount in cart.cart_level_discount_applications -%}
            <div class="discount-item">
              <span class="discount-name">{{ discount.title }}</span>
              <span class="discount-remove">Ã—</span>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div> {% endcomment %}
  </div>
</div>


<script>
  window.addEventListener("DCART:appApi.initialized", function (e) {
    DCART.discountbox.placement = {
      ajaxDicountSelector: {
        path: ".cart-discount-block",
        type: 0,
      },
      ajaxTotalSelector: {
        path: ".fluct-it-cart__footer-total-price",
        type: 0,
      },
    }
  });

  function setupDiscountButton() {
  
    const btn = document.querySelector('#discount-apply');
    const input = document.querySelector('#discount-input');
    if (btn && input && window.DCART && DCART.discountbox && typeof DCART.discountbox.applyDiscount === 'function') {
      btn.addEventListener('click', function() {
        dcartAPI.discount.apply(input.value);
      setTimeout(Alpine.store("ajCart").fetchCart(), 1000);
      });
    } else {
      setupDiscountButton()
    }
  }

  setTimeout(setupDiscountButton, 200);


</script>


