<div x-data x-init="$store.ajCart.freeProductThreshold = {{ settings.free_product_threshold | plus: 0 }}; $store.ajCart.freeProductID = {{ settings.free_product_gift.variants[0].id }}; $store.ajCart.freeSampleThreshold = {{ settings.free_sample_threshold }}; $store.ajCart.showFreeSamples = {{ settings.show_free_samples }};$store.ajCart.singleFreeSampleID = {{ settings.free_bag.variants[0].id | default: 'null' }};">
    <div x-show="($store.ajCart.cart.total_price / 100).toFixed(2) > 0" class="fluct-it__gift-list">
        <div
            class="fluct-it__gift-box active"
            :style="{
                '--border-width': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_ship_threshold }} ? '100%' : '50%',
                '--border-right': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_ship_threshold }} ? '#4AB9CB' : 'transparent',
                '--border-radius': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_ship_threshold }} ? '8px' : '8px 0 0 8px',
                '--connector-background': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_ship_threshold }} ? '#4AB9CB' : 'rgba(0,0,0,0.1)'
            }"
        >
            <div class="fluct-it__gift-close" :style="($store.ajCart.cart.total_price / 100).toFixed(2) > {{ settings.free_ship_threshold }} ? 'background: #4AB9CB;' : ''">
                <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) < {{ settings.free_ship_threshold }}">
                    {% render 'close-icon' %}
                </template>
                <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_ship_threshold }}">
                    {% render 'checkmark-icon' %}
                </template>
            </div>
            <picture>
                {% render 'shipping-threshold-1' %}
            </picture>
            <div class="fluct-it__gift-info">
                <span class="fluct-it__gift-text">{{ 'fluctit.cart.free_shipping' | t }}</span>
                <span class="fluct-it__gift-price">€{{ settings.free_ship_threshold }}</span>
            </div>
        </div>

        <div
            class="fluct-it__gift-box"
            :style="{
                '--border-width': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_sample_threshold }} ? '100%' : '50%',
                '--border-right': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_sample_threshold }} ? '#4AB9CB' : 'transparent',
                '--border-radius': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_sample_threshold }} ? '8px' : '8px 0 0 8px',
                '--connector-background': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_sample_threshold }} ? '#4AB9CB' : 'rgba(0,0,0,0.1)'
            }"
            :class="{'active': ($store.ajCart.cart.total_price / 100).toFixed(2) > {{ settings.free_ship_threshold }} }"
        >
            <div class="fluct-it__gift-close" :style="($store.ajCart.cart.total_price / 100).toFixed(2) > {{ settings.free_sample_threshold }} ? 'background: #4AB9CB;' : ''">
                <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) < {{ settings.free_sample_threshold }}">
                    {% render 'close-icon' %}
                </template>
                <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_sample_threshold }}">
                    {% render 'checkmark-icon' %}
                </template>
            </div>
            <picture>
                {% if settings.free_bag %}
                    <img src="{{ settings.free_bag.images[0] | image_url: width: 200, height: 200 }}" alt="{{ settings.free_bag.images[0].alt }}" width="auto" height="auto">
                {% endif %}
                {% render 'shipping-threshold-2' %}
            </picture>
            <div class="fluct-it__gift-info">
                <span class="fluct-it__gift-text">
                    {% if settings.free_sample_text != blank %}
                        {{ settings.free_sample_text }}
                    {% else %}
                       {{ 'fluctit.cart.free' | t }} {{ settings.free_bag.title }} 
                    {% endif %}</span>
                <span class="fluct-it__gift-price">€{{ settings.free_sample_threshold }}</span>
            </div>
        </div>

        <div
            class="fluct-it__gift-box"
            :style="{
                '--border-width': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_product_threshold }} ? '100%' : '50%',
                '--border-right': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_product_threshold }} ? '#4AB9CB' : 'transparent',
                '--border-radius': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_product_threshold }} ? '8px' : '8px 0 0 8px'
            }"
            :class="{'active': ($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_sample_threshold }} }"
        >
            <div  class="fluct-it__gift-close" :style="($store.ajCart.cart.total_price / 100).toFixed(2) > {{ settings.free_product_threshold }} ? 'background: #4AB9CB;' : ''">
                <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) < {{ settings.free_product_threshold }}">
                    {% render 'close-icon' %}
                </template>
                <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) >= {{ settings.free_product_threshold }}">
                    {% render 'checkmark-icon' %}
                </template>
            </div>
            
            <picture>
                <img
                    src="{{ settings.free_product_gift.images[0] | image_url: width: 32 }}"
                    alt="Shipping threshold 3"
                    width="32"
                    height="32"
                    style="max-width:60px;max-height:60px;"
                    loading="lazy"
                >
            </picture>
            <div class="fluct-it__gift-info">
                <span class="fluct-it__gift-text">{{ 'fluctit.cart.free' | t }} {{ settings.free_product_gift.title }}</span>
                <span class="fluct-it__gift-price">€{{ settings.free_product_threshold }}</span>
            </div>
        </div>
    </div>

    <div class="fluct-it__gift-message" x-show="($store.ajCart.cart.total_price / 100).toFixed(2) > 0">
        <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) < {{ settings.free_ship_threshold }}">
            <p >{{ 'fluctit.add' | t}} <strong x-text="'€' + ({{ settings.free_ship_threshold }} - ($store.ajCart.cart.total_price / 100).toFixed(2)).toFixed(0)"></strong> {{ 'fluctit.receive' | t}}  <b>{{ 'fluctit.free_shipping' | t }}</b></p>
        </template>

        <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) > {{ settings.free_ship_threshold }} && ($store.ajCart.cart.total_price / 100).toFixed(2) < {{ settings.free_sample_threshold }}">
            <p >{{ 'fluctit.add' | t }} <strong x-text="'€' + ({{ settings.free_sample_threshold }} - ($store.ajCart.cart.total_price / 100)).toFixed(0)"></strong>
 {{ 'fluctit.receive' | t}} <b>{{ settings.free_bag.title }}</b></p>
        </template>

        <template x-if="($store.ajCart.cart.total_price / 100).toFixed(2) > {{ settings.free_sample_threshold }} && ($store.ajCart.cart.total_price / 100).toFixed(2) < {{ settings.free_product_threshold }}">
            <p >{{ 'fluctit.add' | t }} <strong x-text="'€' + ({{ settings.free_product_threshold }} - ($store.ajCart.cart.total_price / 100).toFixed(2)).toFixed(0)"></strong> {{ 'fluctit.receive' | t}} {{ 'fluctit.free' | t }} <b>{{ settings.free_product_gift.title }}</b></p>
        </template>

    </div>



</div>
    <style>
    .fluct-it__gift-list {
        display: flex;
        justify-content: space-between;
        padding: 0 20px;
        padding-bottom: 12px;
        gap: 18px;
        margin-bottom:6px;
        box-sizing: border-box;
    }

    .fluct-it__gift-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 12px;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 8px;
        width: 100%;
        background: #fff;
        position:relative;
        box-sizing: border-box;
        --border-width: 0%;
        --border-right: transparent;
        --border-radius: 0px;
        z-index:10;
        --connector-background: rgba(0,0,0,0.1);
    }

.fluct-it__gift-box.active::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    bottom: -2px;
    right: -2px;
    width: calc(var(--border-width) + 4px);
    height: calc(100% + 4px);   
    border: 3px solid #4AB9CB;
    border-right-color: var(--border-right);
    border-radius: var(--border-radius);
    pointer-events: none;
    box-sizing: border-box;
    z-index:999;
}

.fluct-it__gift-box.active:not(:last-child):after {
    content: "";
    position: absolute;
    width:30px;
    right: -30px;
    top:50%;
    transform: translateY(-50%);
    height:1px;
    background: var(--connector-background);
    z-index:-1;
}

.fluct-it__gift-close {
    position: absolute;
    align-items:center;
    display:flex;
    justify-content:center;
    top: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.1);
    height:28px;
    width:28px;
    border-bottom-left-radius: 8px;
}

.fluct-it__gift-message {
    text-align: center;
    padding:0 20px;
    color:#000;
}

    .fluct-it__gift-box picture {
        margin-bottom: 12px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .fluct-it__gift-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2px;
        {% comment %} margin-top: auto; {% endcomment %}
    }

    .fluct-it__gift-text {
        font-weight: 500;
        font-size: 12px;
        text-align:center;
        line-height: 1.2;
    }

    .fluct-it__gift-price {
        font-weight: 600;
        font-size: 14px;
    }
    </style>
