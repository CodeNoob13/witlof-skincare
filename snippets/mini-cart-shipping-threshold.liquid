<div x-data="ajCart">


<div x-show="cartPrice > 0" class="fluct-it__gift-list">
            <div
    class="fluct-it__gift-box active"
    :style="{
        '--border-width': cartPrice >= {{ settings.free_ship_threshold }} ? '100%' : '50%',
        '--border-right': cartPrice >= {{ settings.free_ship_threshold }} ? '#4AB9CB' : 'transparent',
        '--border-radius': cartPrice >= {{ settings.free_ship_threshold }} ? '8px' : '8px 0 0 8px',
        '--connector-background': cartPrice >= {{ settings.free_ship_threshold }} ? '#4AB9CB' : 'rgba(0,0,0,0.1)'
    }"
    >
            <picture>
                {% render 'shipping-threshold-1' %}
            </picture>
            <div class="fluct-it__gift-info">
                <span class="fluct-it__gift-text">Gratis verzending</span>
                <span class="fluct-it__gift-price">€{{ settings.free_ship_threshold }}</span>
            </div>
        </div>
        <div class="fluct-it__gift-box"
    :style="{
        '--border-width': cartPrice >= {{ settings.free_sample_threshold }} ? '100%' : '50%',
        '--border-right': cartPrice >= {{ settings.free_sample_threshold }} ? '#4AB9CB' : 'transparent',
        '--border-radius': cartPrice >= {{ settings.free_sample_threshold }} ? '8px' : '8px 0 0 8px',
        '--connector-background': cartPrice >= {{ settings.free_sample_threshold }} ? '#4AB9CB' : 'rgba(0,0,0,0.1)'
    }" :class="{'active': cartPrice >= {{ settings.free_sample_threshold }} }">
            <picture>
                {% render 'shipping-threshold-2' %}
            </picture>
            <div class="fluct-it__gift-info">
                <span class="fluct-it__gift-text">Gratis sample</span>
                <span class="fluct-it__gift-price">€{{ settings.free_sample_threshold }}</span>
            </div>
        </div>
        <div class="fluct-it__gift-box"
    :style="{
        '--border-width': cartPrice >= {{ settings.free_sample_product_threshold }} ? '100%' : '50%',
        '--border-right': cartPrice >= {{ settings.free_sample_product_threshold }} ? '#4AB9CB' : 'transparent',
        '--border-radius': cartPrice >= {{ settings.free_sample_product_threshold }} ? '8px' : '8px 0 0 8px'

    }" :class="{'active': cartPrice >= {{ settings.free_sample_threshold }} }">
            <picture>
                {%- if settings.shipping_threshold_3_image != blank -%}
                    <img src="{{ settings.shipping_threshold_3_image | image_url: width: 32 }}" alt="Shipping threshold 3" width="32" height="32" style="max-width:60px;max-height:60px;" loading="lazy">
                {%- else -%}
                    {% render 'shipping-threshold-2' %}
                {%- endif -%}
            </picture>
            <div class="fluct-it__gift-info">
                <span class="fluct-it__gift-text">Gratis Balancing Toner</span>
                <span class="fluct-it__gift-price">€{{ settings.free_sample_product_threshold }}</span>
            </div>
        </div>
    </div>

    <div>
        <p>Hello there</p>
    </div>


</div>
    <style>
    .fluct-it__gift-list {
        display: flex;
        justify-content: space-between;
        padding: 0 20px;
        gap: 18px;
        margin-bottom:6px;
        box-sizing: border-box;
    }

    .fluct-it__gift-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 12px;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 8px;
        width: 100%;
        background: #fff;
        position:relative;
        box-sizing: border-box;
        --border-width: 0%;
        --border-right: transparent;
        --border-radius: 0px;
        z-index:10;
        --connector-background: rgba(0,0,0,0.1);
    }

.fluct-it__gift-box.active::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    bottom: -2px;
    right: -2px;
    width: calc(var(--border-width) + 4px);
    height: calc(100% + 4px);   
    border: 3px solid #4AB9CB;
    border-right-color: var(--border-right);
    border-radius: var(--border-radius);
    pointer-events: none;
    box-sizing: border-box;
    z-index:999;
}

.fluct-it__gift-box.active:not(:last-child):after {
    content: "";
    position: absolute;
    width:30px;
    right: -30px;
    top:50%;
    transform: translateY(-50%);
    height:1px;
    background: var(--connector-background);
    z-index:-1;
}



    .fluct-it__gift-box picture {
        margin-bottom: 12px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .fluct-it__gift-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2px;
        {% comment %} margin-top: auto; {% endcomment %}
    }

    .fluct-it__gift-text {
        font-weight: 500;
        font-size: 12px;
        text-align:center;
        line-height: 1.2;
    }

    .fluct-it__gift-price {
        font-weight: 600;
        font-size: 14px;
    }
    </style>
