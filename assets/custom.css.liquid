}

@font-face {
    font-family: 'Isidora Sans Alt';
    src: url('https://cdn.shopify.com/s/files/1/0765/8461/6257/files/IsidoraSansAlt-Bold.woff2?v=1686640754') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0765/8461/6257/files/IsidoraSansAlt-Bold.woff?v=1686640754') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Isidora Sans Alt';
    src: url('https://cdn.shopify.com/s/files/1/0765/8461/6257/files/IsidoraSansAlt-Light.woff2?v=1686640754') format('woff2'),
